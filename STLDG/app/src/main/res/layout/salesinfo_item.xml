<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/infoHead"
            android:layout_width="420dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#3D8E41"
            android:elevation="15dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Sales"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:id="@+id/TarpCodeLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#0E0106"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/salesData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#090506"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/versionNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tarpNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/labelAppVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:text="Enter Version:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etAppVersion"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#FBF9F9"
        android:hint="Enter % Chance"
        android:textColor="#FBF9F9"
        android:textColorHint="#FBF9F9" />

    <TextView
        android:id="@+id/labelControlNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:text="Enter Conntrol#:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etControlNum"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#FBF9F9"
        android:hint="Enter % Chance"
        android:textColor="#FBF9F9"
        android:textColorHint="#FBF9F9" />

</LinearLayout>